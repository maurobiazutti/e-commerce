<p style="color: green"><%= notice %></p>

<% content_for :title, "Categories" %>

<h1 class="h3 mb-4 text-gray-800">Categories</h1>

<div class="row">
  <div class="col-lg-12">
    <div class="card shadow mb-4">
      <div class="card body">
        <table class ="table table-striped">
          <thead>
            <th>Name</th>
            <th>Position</th>
            <th>Actions</th>
          </thead>
          <tbody>
            <% @categories.each do |category| %>
              <tr>
                <td><%= category.name %></td>
                <td><%= category.position %></td>
                <td>
                  <%= link_to "Detalhes", admin_category_path(category), class: "btn btn-primary" %> 
                  <%= link_to "Editar", edit_admin_category_path(category), class: "btn btn-warning" %> 
                  <%= button_to "Deletar", admin_category_path(category), method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "btn btn-danger" %>
                  
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
        
        <%= link_to "Nova Categoria", new_admin_category_path, class:"btn btn-primary m-3 " %>
      </div>
    </div>
  </div>
</div>





 